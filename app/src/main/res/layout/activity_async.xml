<?xml version = "1.0" encoding = "utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c1c1c1"
    android:backgroundTint="@color/colorGrey"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".AsyncActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/async_padding"
        android:paddingBottom="@dimen/async_padding"
        android:text="@string/activity_log"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/async_title" />

    <Button
        android:id="@+id/asyncTask"
        android:layout_width="@dimen/log_button_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded_button"
        android:text="@string/get_app_history"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/async_text" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/async_image"
        android:layout_height="@dimen/async_image" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/story"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/async_padding"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/async_text" />
    </ScrollView>
</LinearLayout>