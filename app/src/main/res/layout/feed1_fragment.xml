<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feed.Feed1Fragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="5dp">

        <ImageView
            android:id="@+id/feed_description_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:contentDescription="@string/feed_description_image"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/job_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/feed_description_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/job_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/job_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:padding="35dp"
            android:textAlignment="center"
            android:textSize="16sp" />

        <Button
            android:id="@+id/pite1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/job_description"
            android:layout_marginTop="30dp"
            android:background="#0a1c20"
            android:text="@string/search_for_help"
            android:textColor="@android:color/white" />

    </RelativeLayout>

</FrameLayout>