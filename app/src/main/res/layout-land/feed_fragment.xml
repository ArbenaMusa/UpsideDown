                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/feed_text_size" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/housekeeper"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/feed_margin"
            app:cardCornerRadius="@dimen/feed_card_radius"
            tools:targetApi="lollipop">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/feed_card_height"
                android:orientation="vertical"
                android:weightSum="3">

                <ImageView
                    android:layout_width="@dimen/feed_image"
