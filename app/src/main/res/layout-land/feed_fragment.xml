<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/feed_padding"
    tools:context=".feed.FeedFragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:padding="@dimen/feed_padding">

        <androidx.cardview.widget.CardView
            android:id="@+id/electrician"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/feed_margin"
            app:cardCornerRadius="@dimen/feed_card_radius"
            tools:targetApi="lollipop">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/feed_card_height"
                android:orientation="vertical"
                android:weightSum="3">

                <ImageView
                    android:layout_width="@dimen/feed_image"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/feed_margin"
                    android:layout_weight="2"
                    android:contentDescription="@string/electrician"
                    android:src="@drawable/electrician" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/feed_margin"
                    android:text="@string/electrician"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/feed_text_size" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/plumber"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/feed_margin"
            app:cardCornerRadius="@dimen/feed_card_radius"
            tools:targetApi="lollipop">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/feed_card_height"
                android:orientation="vertical"
                android:weightSum="3">

                <ImageView
                    android:layout_width="@dimen/feed_image"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/feed_margin"
                    android:layout_weight="2"
                    android:contentDescription="@string/plumber"
                    android:src="@drawable/plumber" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/feed_margin"
                    android:text="@string/plumber"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/feed_text_size" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/painter"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/feed_margin"
            app:cardCornerRadius="@dimen/feed_card_radius"
            tools:targetApi="lollipop">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/feed_card_height"
                android:orientation="vertical"
                android:weightSum="3">

                <ImageView
                    android:layout_width="@dimen/feed_image"
